local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local TextBox = Instance.new("TextBox")
local OpenButton = Instance.new("TextButton")
local ChangeColorButton = Instance.new("TextButton")
local TextSizeSlider = Instance.new("Slider")
local HopServerButton = Instance.new("TextButton")

-- Set up ScreenGui
ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Set up Frame
Frame.Size = UDim2.new(0.5, 0, 0.5, 0)
Frame.Position = UDim2.new(0.25, 0, 0.25, 0)
Frame.BackgroundColor3 = Color3.new(1, 1, 1)
Frame.Visible = false
Frame.Parent = ScreenGui

-- Set up TextBox
TextBox.Size = UDim2.new(1, 0, 0, 50)
TextBox.Position = UDim2.new(0, 0, 0, 10)
TextBox.PlaceholderText = "Masukkan Kunci"
TextBox.TextColor3 = Color3.new(0, 0, 0)
TextBox.Parent = Frame

-- Set up Open Button
OpenButton.Size = UDim2.new(1, 0, 0, 50)
OpenButton.Position = UDim2.new(0, 0, 0, 70)
OpenButton.Text = "Buka UI"
OpenButton.TextColor3 = Color3.new(0, 0, 0)
OpenButton.Parent = Frame

-- Set up Change Color Button
ChangeColorButton.Size = UDim2.new(1, 0, 0, 50)
ChangeColorButton.Position = UDim2.new(0, 0, 0, 130)
ChangeColorButton.Text = "Ubah Warna Latar Belakang"
ChangeColorButton.TextColor3 = Color3.new(0, 0, 0)
ChangeColorButton.Parent = Frame

-- Set up Text Size Slider
TextSizeSlider.Size = UDim2.new(1, 0, 0, 50)
TextSizeSlider.Position = UDim2.new(0, 0, 0, 190)
TextSizeSlider.MinValue = 10
TextSizeSlider.MaxValue = 50
TextSizeSlider.Value = 20
TextSizeSlider.Parent = Frame

-- Set up Hop Server Button
HopServerButton.Size = UDim2.new(1, 0, 0, 50)
HopServerButton.Position = UDim2.new(0, 0, 0, 250)
HopServerButton.Text = "Hop Server"
HopServerButton.TextColor3 = Color3.new(0, 0, 0)
HopServerButton.Parent = Frame

-- Kunci yang valid
local validKeys = {"Key1", "Key2"} -- Ganti dengan kunci yang valid

local function notify(title, content)
    game.StarterGui:SetCore("SendNotification", {
        Title = title;
        Text = content;
        Duration = 5;
    })
end

-- Fungsi untuk mengubah warna latar belakang
local function changeBackgroundColor()
    local randomColor = Color3.new(math.random(), math.random(), math.random())
    Frame.BackgroundColor3 = randomColor
    notify("Warna Diubah!", "Warna latar belakang telah diubah.")
end

-- Fungsi untuk mengubah ukuran teks
local function changeTextSize(value)
    TextBox.TextSize = value
end

-- Fungsi untuk membuka UI
OpenButton.MouseButton1Click:Connect(function()
    local inputKey = TextBox.Text
    for _, key in ipairs(validKeys) do
        if inputKey == key then
            Frame.Visible = true -- Tampilkan UI
            notify("Sukses!", "UI berhasil dibuka!")
            return
        end
    end
    notify("Gagal!", "Kunci yang dimasukkan salah.")
end)

-- Event untuk tombol ubah warna
ChangeColorButton.MouseButton1Click:Connect(changeBackgroundColor)

-- Event untuk slider ukuran teks
TextSizeSlider.Changed:Connect(function()
    changeTextSize(TextSizeSlider.Value)
end)

