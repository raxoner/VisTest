local UserInputService = game:GetService("UserInputService")
local ui = game:GetService("GuiService"):Create("ScreenGui")
local frame = Instance.new("Frame", ui)
local label = Instance.new("TextLabel", frame)

-- Configuration
local key1 = Enum.KeyCode.E  -- Key to open the UI
local key2 = Enum.KeyCode.Q  -- Key to close the UI
local uiVisible = false

-- UI Properties
frame.Size = UDim2.new(0.2, 0, 0.2, 0)
frame.Position = UDim2.new(0.4, 0, 0.4, 0)
frame.BackgroundColor3 = Color3.new(0.5, 0.5, 0.5)
label.Text = "UI Example"
label.FontSize = Enum.FontSize.Size14
label.TextColor3 = Color3.new(0, 0, 0)

-- Event Handlers
UserInputService.InputBegan:Connect(function(input)
    if input.KeyCode == key1 and not uiVisible then
        ui.Enabled = true
        uiVisible = true
    end
end)

UserInputService.InputBegan:Connect(function(input)
    if input.KeyCode == key2 and uiVisible then
        ui.Enabled = false
        uiVisible = false
    end
end)
